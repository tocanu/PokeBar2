<Window x:Class="Pokebar.DesktopPet.PetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">
    <Canvas x:Name="RootCanvas" Width="200" Height="200">
        <Image x:Name="PokemonImage"
               Stretch="None"
               RenderTransformOrigin="0.5,0.5"
               Cursor="Hand"
               MouseLeftButtonDown="OnSpriteMouseClick">
            <Image.RenderTransform>
                <ScaleTransform x:Name="FlipTransform" ScaleX="1" ScaleY="1"/>
            </Image.RenderTransform>
        </Image>
        <Rectangle x:Name="DebugHitbox"
                   Stroke="Lime"
                   StrokeThickness="1"
                   Fill="Transparent"
                   Visibility="Collapsed"/>
        <Border x:Name="DebugPanel"
                Background="#AA000000"
                Padding="4"
                CornerRadius="4"
                Visibility="Collapsed"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
            <TextBlock x:Name="DebugText"
                       Foreground="Lime"
                       FontFamily="Consolas"
                       FontSize="12"/>
        </Border>
    </Canvas>
</Window>
