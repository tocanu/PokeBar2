<Window x:Class="Pokebar.DesktopPet.CaptureBallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">
    <Grid x:Name="RootGrid" Width="20" Height="20">
        <Ellipse Fill="White" Stroke="Black" StrokeThickness="1"/>
        <Rectangle Fill="#D32F2F" Height="10" VerticalAlignment="Top"/>
        <Rectangle Fill="Black" Height="2" VerticalAlignment="Center"/>
        <Ellipse Fill="White" Stroke="Black" StrokeThickness="1"
                 Width="6" Height="6"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"/>
    </Grid>
</Window>
